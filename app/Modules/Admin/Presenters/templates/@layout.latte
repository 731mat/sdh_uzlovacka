	{block head}{/block}
    {block style}{/block}
    {block scriptHeader}{/block}

</head>
<body class="sb-nav-fixed">
<nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
	<a class="navbar-brand ms-4" n:href="Dashboard:default"> {control systemVariable nazev_firmy}</a>
	<button class="btn btn-link btn-sm order-1 order-lg-0" id="sidebarToggle" href="#"><i class="fas fa-bars"></i>
	</button>

	<!-- Navbar Search-->
	<form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
		<a class="btn btn-primary" n:href="Sign:out"><i class="fas fa-sign-out-alt"></i></a>
		<a class="btn btn-primary" href="https://hasici.neplachovice.cz">WEB</a>
	</form>

</nav>
<div id="layoutSidenav">
	<div id="layoutSidenav_nav">
		<nav class="sb-sidenav accordion sb-sidenav-dark" id="sidenavAccordion">
			<div class="sb-sidenav-menu">
				<div class="nav">
					{include './komponenty/menu.latte'}
				</div>
			</div>
			<div class="sb-sidenav-footer">
				<div class="small">Logged in as:</div>
				{$user->getIdentity()->data['username']}
			</div>
		</nav>
	</div>
	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid">
				<div n:foreach="$flashes as $flash" class="alert alert-{$flash->type} messageDropDown m-3" >{$flash->message}</div>
				<h3 class="mt-4 mb-5">{block tlacitkaP}{/block} {include title}  {block tlacitkaZ}{/block}<div style="float: right">{block rightsite}{/block}</div></h3>
				{include content}
			</div>
		</main>
	</div>
</div>


	<script src="{$basePath}/js/netteForms.js"></script>
	<script src="{$basePath}/js/nette.ajax.js"></script> {* Nette Ajax depens on jQuery *}


    {block scripts}{/block}

